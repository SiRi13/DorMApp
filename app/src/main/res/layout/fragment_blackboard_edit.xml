<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_blackboard_editText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/txtBlackboardEditText"
        android:id="@+id/txtViewBlackboardEditText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapCharacters|text|textMultiLine|textCapWords|textCapSentences|textLongMessage"
        android:ems="10"
        android:id="@+id/editTxtBlackboardEditMessage"
        android:layout_below="@+id/txtViewBlackboardEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:minLines="1"
        android:maxLines="20" />

</RelativeLayout>
